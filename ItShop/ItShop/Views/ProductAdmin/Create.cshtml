@model AddEditProductViewModel
@{
    ViewData["Title"] = "ItFamily";
    Layout="_AdminLayout";
   
}

<h1>افزودن کالا</h1>
<hr />
<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>نام محصول</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>توضیحات </label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>قیمت</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>تعداد</label>
        <input asp-for="QuantityInStock" class="form-control" />
        <span asp-validation-for="QuantityInStock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>تصویر</label>
        <input asp-for="Picture"  class="form-control" />
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-success" value="ثبت"/>
</form>
