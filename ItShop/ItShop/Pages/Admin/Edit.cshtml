@page
@model ItShop.Pages.Admin.EditModel
@{
    ViewData["Title"] = "ویرایش";
}

<h1> ویرایش</h1>

<hr />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <label>نام محصول</label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>توضیحات </label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>قیمت</label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>تعداد</label>
        <input asp-for="Product.QuantityInStock" class="form-control" />
        <span asp-validation-for="Product.QuantityInStock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>تصویر</label>
        <input asp-for="Product.Picture"  class="form-control" />
        <span asp-validation-for="Product.Picture" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-success" value="ثبت"/>
</form>
